<div>
    <div class="body">

    <div class="sign-form">
      <div class="sign-header">
        新規登録
      </div>
      <div class="sign-body">

        <div class="app-title">
          <h1>Schedule-App</h1>
          <div>
            <%= link_to 'ログイン', new_user_session_path, method: :get %>
          </div>
        </div>

        <div class="sign-input">
          <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
            <div class="form-group">
              <div class="input-label">
                <label for="Name">名前</label>
              </div>
              <div class="input-form">
                <%= f.text_field :name, id:"Name", placeholder:"Name" %>
              </div>
            </div>
            
            <div class="form-group">
              <div class="input-label">
                <label for="InputEmail">メールアドレス</label>
              </div>
              <div class="input-form">
                <%= f.email_field :email, id:"InputEmail", placeholder:"Email"%>
              </div>
            </div>

            <div class="form-group">
              <div class="input-label">
                <label for="PassWord">パスワード</label>
              </div>
              <div class="input-form">
                <%= f.password_field :password, id:"PassWord", placeholder:"Password" %>
              </div>
            </div>

            <div class="sign-input-submit">
              <%= f.submit "新規登録", class: "input-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>