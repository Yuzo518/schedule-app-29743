<div>
  <div class="body">

    <div class="sign-form">
      <div class="sign-header">
        ログイン
      </div>
      <div class="sign-body">

        <div class="app-title">
          <h1>Schedule-App</h1>
          <div>
            <%= link_to '新規登録', new_user_registration_path, mothod: :get %>
          </div>
        </div>

        <div class="sign-input">
          <%= form_with model: @user, url: new_user_session_path, local: true do |f| %>
          
            <div class="form-group">
              <div class="input-label">
                <label for="InputEmail">メールアドレス</label>
              </div>
              <div class="input-form">
                <%= f.email_field :email, id:"InputEmail", placeholder:"Email" %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-label">
                <label for="PassWord">パスワード</label>
              </div>
              <div class="input-form">
                <%= f.password_field :password, id:"PassWord", placeholder:"Password" %>
              </div>
            </div>
            
            <div class="sign-input-submit">
              <%= f.submit "ログイン", class: "input-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>